<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MiPet" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color1</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>


    </style>


    <!-- Tema personalizado para DatePicker-->
    <style name="DatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/color1</item>
        <item name="colorControlActivated">@color/color1</item>
        <item name="colorControlHighlight">@color/color1</item>
        <item name="android:windowBackground">@color/grisEdit</item>     <!--calendar background-->
        <item name="android:textColorPrimary">@color/black</item> <!--days of the month-->
        <item name="android:textColorSecondary">@color/black</item>    <!--days of the week-->

    </style>
    <!-- Tema personalizado para TimePicker-->
    <style name="CustomDatePickerDialog"
        parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/color1</item>
        <item name="android:windowBackground">@color/grisEdit</item>
        <item name="android:gravity">center</item>

    </style>

    <!-- Tema personalizado para Switch-->
    <style name="ThemeOverlay.MySwitchCompat" parent="">
        <item name="colorControlActivated">@color/color1</item>
        <item name="colorSwitchThumbNormal">#f1f1f1</item>
        <item name="android:colorForeground">#42221f1f</item>
    </style>


</resources>