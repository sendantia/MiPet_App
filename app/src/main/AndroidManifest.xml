<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mipet">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MiPet">
        <activity
            android:name=".app.activities.PrincipalCitas"
            android:exported="false" />
        <activity
            android:name=".app.activities.RegistroCitas"
            android:exported="false" />
        <activity
            android:name=".app.activities.RegistroArticulos"
            android:exported="false" />
        <activity
            android:name=".app.activities.PrincipalArticulos"
            android:exported="false" />
        <activity
            android:name=".app.activities.RegistroPet"
            android:exported="false" />
        <activity
            android:name=".app.activities.MainActivity"
            android:exported="false" />
        <activity
            android:name=".app.activities.PoliticaPrivacidad"
            android:exported="false" />
        <activity
            android:name=".app.activities.UserLogin"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".app.service.AlarmReceiver"
            android:enabled="true" />

        <service
            android:name=".app.service.NotificationService"
            android:enabled="true" />
    </application>

</manifest>